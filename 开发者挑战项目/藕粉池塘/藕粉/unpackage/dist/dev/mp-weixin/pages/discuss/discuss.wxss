/* 主题颜色 */
page {
	background-color: #f5f5f5;
}
.discussInfo {
	display: -webkit-box;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	        flex-direction: column;
	padding: 20rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
	-webkit-box-align: center;
	        align-items: center;
}
.discussInfo>.user {
	display: -webkit-box;
	display: flex;
	margin: 20rpx 0;
}
.discussInfo>.user>.user-c {
	display: -webkit-box;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	        flex-direction: column;
}
.discussInfo>.user>.user-c text:nth-child(2) {
	font-size: 10px;
	color: #999;
}
.avatar {
	margin-right: 10rpx;
}
.count {
	font-size: 12px;
	color: #999;
	margin-bottom: 10rpx;
}
.count text{
	margin: 0 10rpx;
}

